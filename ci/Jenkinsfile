pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "anidubonline/cicd"
        CONTAINER_NAME = "cicd-container"
    }

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/anidubonline/cicd.git', credentialsId: 'your-git-credentials'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}", "-f ci/Dockerfile .")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        docker.image("${DOCKER_IMAGE}").push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        docker.image("${DOCKER_IMAGE}").pull()
                        docker.image("${DOCKER_IMAGE}").run("-d --name ${CONTAINER_NAME} -p 80:80")
                    }
                }
            }
        }
    }
}
